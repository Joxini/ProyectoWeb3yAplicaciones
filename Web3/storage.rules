rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /projectPDFs/{projectId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == projectId;
    }

    match /projectImages/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /userImages/{userId}/{allPaths=**} {
      // Permitir la escritura para usuarios autenticados o no autenticados
      allow read, write: if true;
    }
  }
}
